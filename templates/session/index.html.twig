{% extends 'base.html.twig' %}

{% block title %}liste sessions
{% endblock %}

{% block body %}

	<h2>Voici nos sessions actuelles</h2>

	<a href="{{ path('add_session') }}"><button class="button">Ajouter une session</button></a>
	<br>
	{% for session in sessions %}
		<div class="d-grid gap-3">
			<div class="p-2 bg-light border">
				<a href="{{ path('show_session', {'id': session.id})}}">{{session}}</a><br>
				<a class="lienCategorie" href="{{ path('update_session', {'id' : session.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
			</div>
		</div>
        <br>
	{% endfor %}

{% endblock %}
